
<div class = "game">
<div class="well">
<h4>Dealers Hand </h4>
<%if @player_stay == true %>
DEALER TOTAL: <%=calculate_total(session[:dealer_hand]) %>
<%end%>

<% session[:dealer_hand].each do |card| %>
  <%if @player_stay == true%> 
    <%= view_cards(card)%>
  <%else%>
    <%= view_cards(session[:dealer_hand][0])%>
    "<img src='/images/cards/cover.jpg'>"
    <%break%>
<!--    <%binding.pry%> -->
  <% end %>
<% end %>
    <br>
</div>


 
<div class="well">
<h4><%=session[:name]%>'s Hand </h4>
<% session[:player_hand].each do |card| %> 
  <%=view_cards(card)%>
    <% end %><br>
  <% if @show_hit_stay %>
<form id='hit_button' action = '/game/player/hit' method= 'post'>
<input type='submit' class= "btn-success btn-lg" value='Hit!'>
</form>

<form id='stay_button' action = '/game/player/stay' method= 'post'>
<input type='submit' class= "btn-warning btn-lg" value='Stay!'>
</form>
<% end %>
</div>
</div>
  TOTAL: <%=calculate_total(session[:player_hand]) %>

